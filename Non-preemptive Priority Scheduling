#include <iostream>
using namespace std;

struct Process {
    int id, bt, priority;
};

int main() {
    int n;
    cin >> n;

    Process p[n];
    for(int i=0;i<n;i++){
        p[i].id = i+1;
        cin >> p[i].bt >> p[i].priority;
    }

    // sort by priority
    for(int i=0;i<n;i++)
        for(int j=0;j<n-i-1;j++)
            if(p[j].priority > p[j+1].priority)
                swap(p[j], p[j+1]);

    int wt[n], tat[n];
    wt[0] = 0;

    for(int i=1;i<n;i++)
        wt[i] = wt[i-1] + p[i-1].bt;

    for(int i=0;i<n;i++)
        tat[i] = wt[i] + p[i].bt;

    cout << "ID\tBT\tPr\tWT\tTAT\n";
    for(int i=0;i<n;i++)
        cout << p[i].id << "\t" << p[i].bt << "\t" << p[i].priority << "\t" 
             << wt[i] << "\t" << tat[i] << endl;

    return 0;
}
