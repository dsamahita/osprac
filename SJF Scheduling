#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;

    int p[n], bt[n];
    for(int i = 0; i < n; i++) {
        p[i] = i+1;
        cin >> bt[i];
    }

    // sort by burst time
    for(int i=0;i<n;i++)
        for(int j=0;j<n-i-1;j++)
            if(bt[j] > bt[j+1]) {
                swap(bt[j], bt[j+1]);
                swap(p[j], p[j+1]);
            }

    int wt[n], tat[n];
    wt[0] = 0;
    for(int i=1;i<n;i++)
        wt[i] = wt[i-1] + bt[i-1];

    for(int i=0;i<n;i++)
        tat[i] = wt[i] + bt[i];

    cout << "P\tBT\tWT\tTAT\n";
    for(int i=0;i<n;i++)
        cout << p[i] << "\t" << bt[i] << "\t" << wt[i] << "\t" << tat[i] << endl;

    return 0;
}
